<h1>Transactions</h1>
<div class="d-flex justify-content-between">
  <div>
    <%= link_to 'Add Transaction', new_transaction_path, class: 'btn btn-outline-primary' %>
    <%= link_to 'Go to Category', categories_path, class: 'btn btn-outline-primary' %>
  </div>
  <div>
    <%= form_tag(transactions_path(format: "js"), class: "row row-cols-lg-auto g-1 align-items-center", remote: true, method: :get) do %>
      <div class="col-12">
        <%= select_tag :year, options_for_select(year_select), { class: "form-select" } %>
      </div>
      <div class="col-12">
        <%= submit_tag "Go", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<br><br>

<div id="transaction_table">
  <%= render(partial: "transactions/transactions_table") %>
</div>

